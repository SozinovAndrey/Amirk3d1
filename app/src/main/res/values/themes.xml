<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication_style" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- всем текстовым поллям  -->
        <!--<item name="android:textViewStyle">@style/MyTextView</item> -->

        <!-- всем кнопкам -->
        <item name="materialButtonStyle">@style/MyButtonStyle42</item>

    </style>

    <!-- *********************2 СТИЛЯ ДЛЯ ВЕРСТКИ******************************* -->
    <!-- СТИЛЬ ДЛЯ EditText -->
    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">@color/bg_textView</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- СТИЛЬ ДЛЯ TextView -->
    <style name="MyTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/bg_textView</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- размер 32-->
    <style name="MyButtonStyle32" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">32sp</item>
    </style>
    <!-- *********************СТИЛИ ДЛЯ ТЕМЫ******************************* -->


    <!-- размер 42, все строчные -->
    <style name="MyButtonStyle42" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">42sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- ********************НАСЛЕДОВАНИЕ СТИЛЯ************** -->
    <!-- Наследование от стиля  Theme.MyApplication_style.ButtonStyle-->
    <style name="MyButtonStyle32_2" parent="MyButtonStyle32">
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@color/cardview_dark_background</item>
    </style>
    
</resources>